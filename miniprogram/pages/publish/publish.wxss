.item {
    height: 120rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0,0,0,.1);
    border-left: none;
    border-right: none;
    border-top: none;
    display: flex;
    flex-direction: row;
    align-items: center;
    transition: all 300ms ease;
}

.item1 {
    height: 20rpx;
    width: 100%;
    background: #F1F8F9;
}

.item2 {
    height: 220rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0,0,0,.1);
    border-left: none;
    border-right: none;
    border-top: none;
}

.textarea-wrp {
    background-color: #fff;
    padding: 30rpx;
}

.text {
    margin-left: 30rpx;
    border-right: 1px solid rgba(0,0,0,.1);
    padding-right: 30rpx;
    font-size: 35rpx;
}

.placeholder {
    font-size: 35rpx;
}

.input {
    margin-left: 30rpx;
    font-size: 35rpx;
    height: 3em;
    width: 700rpx;
}

.picker {
    padding: 13px;
    background-color: #FFFFFF;
}

.button {
    color: #ffffff;
    margin: 30rpx;
    background-color: #09BB07;
}

.foot-body {
    width: 100%;
    height: 150rpx;
    display: flex;
    flex-direction: row;
    margin-left: 30rpx;
    margin-top: 20rpx;
}

.educt_hasupload_pic {
    width: 150rpx;
    height: 150rpx;
    display: flex;
    flex-direction: row;
}

.upload {
    width: 100rpx;
    height: 100rpx;
    position: relative;
    border: 1px solid rgba(0,0,0,0.1);
    margin-top: 20rpx;
    opacity: 50%;
}

.delete {
    width: 40rpx;
    height: 40rpx;
    position: relative;
    right: 20rpx;
    top: 0rpx;
}

.educt_upload_add {
    width: 120rpx;
    height: 120rpx;
}

.add-image {
    width: 100rpx;
    height: 100rpx;
    position: relative;
    margin-top: 20rpx;
}