.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #09BB07;
    width: 100%;
    height: 140px;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #fff;
}

/* .usermotto {
