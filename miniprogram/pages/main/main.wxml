<view class="container">
  <view class="body">
    <!--广告轮播图  -->
    <view class="swiper">
      <swiper autoplay="true" circular="true" duration="800" indicatorActiveColor="#ffffff" indicator-dots="true" interval="4000">
        <swiper-item>
          <image bindtap="goVersionPage" class="image" id="1" mode="widthFix" src='../../images/swiper1.png'></image>
        </swiper-item>
        <swiper-item>
          <image bindtap="goNewPage" class="image" id="2" mode="widthFix" src='../../images/swiper2.png'></image>
        </swiper-item>
        <swiper-item>
          <image bindtap="goGuidePage" class="image" id="3" mode="widthFix" src='../../images/swiper3.png'></image>
        </swiper-item>
      </swiper>
    </view>
    <!--搜索模块  -->
    <view catchtap="goSearchPage" class="search">
      <input class="search-input" disabled="true" placeholder="查找"></input>
      <image class="search-icon" mode="aspectFit" src="../../images/search.png" style="width:18px; height:18px"></image>
    </view>

    <view bindtap="tabChange" class="tab-top">
      <view class="{{tabArr.curHdIndex=='0'?'active':''}}" data-id="0" id="tab-hd01">优选</view>
    </view>
    <!--跳转到详情页面  -->
    <view class="tab-under">
      <view class="under-item {{tabArr.curBdIndex=='0'?'active':''}}">
        <view bindtap="goDetailsPage" class="message-container" data-_id="{{item._id}}" wx:for="{{recordData}}" wx:key="key">
          <view class="author">
            <image class="head-image" src="{{item.authorIcon}}"></image>
            <view class="author-text">
              <text>{{item.authorName}}</text>
              <text>{{item.time}}</text>
            </view>
            <text class="money">￥{{item.Price}}</text>
          </view>
          <view class="main-image">
            <image class="main-image1" mode="aspectFill" src="{{item}}" wx:for="{{item.photo}}" wx:key="key"></image>
          </view>
          <text class="text">{{item.title}}</text>
          <view class="horizon"></view>
          <view class="description">
            <text>地址 </text>
            <text>{{item.address}}</text>
            <text> | </text>
            <text>{{item.label}}</text>
          </view>
        </view>
      </view>
      <view class="under-item {{tabArr.curBdIndex=='1'?'active':''}}">
        <view bindtap="goDetailsPage" class="message-container" data-_id="{{item._id}}" wx:for="{{findData}}" wx:key="key">
          <view class="author">
            <image class="head-image" src="{{item.authorIcon}}"></image>
            <view class="author-text">
              <text>{{item.authorName}}</text>
              <text>{{item.time}}</text>
            </view>
            <text class="money">￥{{item.Price}}</text>
          </view>
          <view class="main-image">
            <image class="main-image1" mode="aspectFill" src="{{item}}" wx:for="{{item.photo}}" wx:key="key"></image>
          </view>
          <text class="text">{{item.title}}</text>
          <view class="horizon"></view>
          <view class="description">
            <text>地址 </text>
            <text>{{item.address}}</text>
            <text> | </text>
            <text>{{item.label}}</text>
          </view>
        </view>
      </view>
    </view>

    <view class="load_more" hidden="{{!loading}}">
      <view class="load_loading"></view>
      <view class="load-tips">正在加载……</view>
    </view>
    <view class="load_end" hidden="{{!loaded}}">没有更多数据了……</view>
  </view>
</view>