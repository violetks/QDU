.container {
    background-color: #f1f1f1;
    width: 100%;
}

.body {
    width: 100%;
}

.swiper {
    width: 100%;
}

.search {
    width: 80%;
    position: absolute;
    top: 20rpx;
    left: 50rpx;
    height: 20rpx;
    background-color: rgb(255,255,255);
    padding: 20rpx;
    border-radius: 50rpx;
    border: solid 1px rgb(230,229,229);
    font-size: 80%;
}

.search-input {
    position: relative;
    bottom: 18rpx;
    left: 50rpx;
}

.search-icon {
    position: absolute;
    bottom: 8rpx;
    left: 560rpx;
}

.image {
    width: 750rpx;
}

.tab-top {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100rpx;
    line-height: 320%;
    border-bottom: solid 1px rgb(175,174,174);
    text-align: center;
    font-size: 80%;
    background-color: #ffffff;
    color: #6A6767;
}

.tab-top view {
    width: 100%;
    margin-left: 0rpx;
    margin-right: 0rpx;
}

.tab-top .active {
    border-bottom: solid 3px #09BB07;
    font-weight: bolder;
    color: #000000;
}

.tab-under {
    width: 100%;
}

.tab-under .under-item {
    display: none;
}

.tab-under .under-item.active {
    display: block;
}

.message-container {
    background-color: #ffffff;
}

.head-image {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
    margin-left: 30rpx;
    vertical-align: middle;
}

.author {
    display: flex;
    flex-direction: row;
    font-size: 70%;
    position: relative;
    top: 20rpx;
}

.author-text {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.main-image1 {
    width: 95px;
    height: 80px;
    margin: 5px 5px 10px 15px;
}

.main-image {
    display: flex;
    flex-direction: row;
}

.text {
    margin-left: 30rpx;
    font-size: 80%;
}

.horizon {
    margin: 10px 0px 10px 0px;
    border: 1px solid rgba(0,0,0,0.1);
    border-left: none;
    border-right: none;
    border-top: none;
}

.money {
    position: absolute;
    right: 30rpx;
    font-size: 140%;
    color: #F2CE87;
    margin-top: 10rpx;
}

.description {
    color: #50B397;
    font-size: 70%;
    margin: 30rpx;
    position: relative;
    bottom: 15rpx;
}

.no {
    background-color: #ffffff;
    width: 100%;
}

.no-image {
    width: 300rpx;
    height: 300rpx;
    vertical-align: middle;
    margin: 0 auto;
    text-align: center;
}

.load_more {
    width: 65%;
    margin: 20rpx auto;
    font-size: 14px;
    text-align: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.load_loading {
    margin: 0 5px;
    width: 40rpx;
    height: 40rpx;
    animation: weuiLoading 1s steps(12,end) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

.load_tips {
    display: inline-block;
    vertical-align: middle;
}

.load_end {
    width: 65%;
    margin: 20rpx auto;
    font-size: 14px;
    text-align: center;
}