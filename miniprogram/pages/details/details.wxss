.container {
    background-color: #f1f1f1;
    width: 100%;
}

.body {
    width: 100%;
}

.swiper {
    width: 100%;
    height: 700rpx;
}

.swiper-item {
    height: 700rpx;
}

.slide-image {
    height: 700rpx;
    width: 750rpx;
}

.top {
    width: 100%;
    height: 200rpx;
    background-color: #ffffff;
    padding-top: 5rpx;
}

.line1 {
    margin-top: 30rpx;
}

.title {
    margin-left: 30rpx;
    font-size: 120%;
}

.money {
    position: absolute;
    right: 30rpx;
    font-size: 140%;
    color: #F2CE87;
}

.description {
    font-size: 80%;
    margin: 30rpx;
    position: relative;
}

.address {
    background-color: #F6F6F6;
    border-radius: 60rpx;
    border: solid 1px rgb(230,229,229);
    padding-left: 20rpx;
    padding-right: 20rpx;
    color: #BBBCBC;
}

.label {
    background-color: #D0FCEF;
    border-radius: 60rpx;
    border: solid 1px rgb(230,229,229);
    padding-left: 20rpx;
    padding-right: 20rpx;
    color: #59B89D;
    margin-left: 20rpx;
}

.author {
    display: flex;
    flex-direction: row;
    font-size: 80%;
    position: relative;
    top: 20rpx;
    background-color: #ffffff;
    width: 100%;
    height: 100rpx;
    padding-top: 20rpx;
}

.authorIcon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    vertical-align: middle;
    border-radius: 50%;
}

.date {
    color: #929292;
}

.author-text {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.total {
    display: flex;
    flex-direction: column;
    width: 200rpx;
    border-left: 1px solid rgba(0,0,0,.1);
    margin-bottom: 20rpx;
    position: absolute;
    right: 0;
    text-align: center;
}

.details {
    background-color: #ffffff;
    width: 100%;
    height: 300rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    top: 38rpx;
}

.text {
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-top: 20rpx;
    font-size: 80%;
}

.foot {
    float: right;
    position: fixed;
    bottom: 0rpx;
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 90rpx;
    border: solid 1px rgb(230,230,228);
    text-align: center;
    background-color: #ffffff;
    color: #6A6767;
}

.like {
    display: flex;
    flex-direction: row;
    width: 300rpx;
    margin: 20rpx;
}

.like-image {
    width: 45rpx;
    height: 45rpx;
    margin-left: 40rpx;
}

.like-text {
    width: 100rpx;
    font-size: 90%;
}

.show {
    display: flex;
    flex-direction: row;
    width: 300rpx;
    margin: 20rpx;
}

.show-image {
    width: 45rpx;
    height: 45rpx;
}

.show-text {
    width: 100rpx;
    font-size: 80%;
    margin-top: 5rpx;
    color: #6A6767;
}

.call {
    display: flex;
    flex-direction: row;
    width: 500rpx;
    background-color: #50B397;
}

.call-text {
    width: 200rpx;
    color: #ffffff;
    margin-top: 15rpx;
    margin-left: 10rpx;
}

.button-show {
    display: flex;
    flex-direction: row;
    width: 300rpx;
    background-color: #ffffff;
}

.button-show::after {
    width: 0;
    height: 0;
    top: 0;
    left: 0;
}

.show-image {
    width: 45rpx;
    height: 45rpx;
    margin-top: 21rpx;
}